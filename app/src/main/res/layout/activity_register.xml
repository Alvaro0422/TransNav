<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/_bg__homescreen_color"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/doodle"
        android:scaleType="centerCrop"
        />

    <View   android:id="@+id/rectangle_14"
        android:background="@drawable/rectangle_14_shape"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="320dp"
        android:layout_height="525dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        >

        <TextView android:id="@+id/account_registration"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:textColor="@color/account_registration_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_registration_string"
            />

        <EditText
            android:id="@+id/editTextUsername"
            android:background="@drawable/rectangle_1_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            android:layout_width="262dp"
            android:layout_height="38dp"
            android:hint="Username"
            android:padding="10dp"
            android:textColorHint="@color/username_color"
            android:textColor="@color/black"
            android:textSize="12sp"
            />

        <EditText   android:id="@+id/editTextEmail"
            android:background="@drawable/rectangle_1_ek1_shape"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:layout_width="262dp"
            android:layout_height="38dp"
            android:hint="Email"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColorHint="@color/username_color"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.46"
            android:layout_marginTop="190dp"
            >

            <EditText   android:id="@+id/editTextPassword"
                android:background="@drawable/rectangle_4_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="262dp"
                android:layout_height="38dp"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:textSize="12sp"
                android:textColorHint="@color/username_color"
                android:textColor="@color/black"
                android:inputType="textPassword"
                />

            <ImageView android:id="@+id/vector"
                android:src="@drawable/vector_2"
                android:contentDescription="vector"
                android:layout_marginStart="230dp"
                android:layout_marginTop="10dp"
                android:layout_width="18.33dp"
                android:layout_height="15.83dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.54"
            >

            <EditText   android:id="@+id/editTextConfPassword"
                android:background="@drawable/rectangle_4_ek1_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="262dp"
                android:layout_height="38dp"
                android:hint="Confirm Password"
                android:paddingLeft="10dp"
                android:textSize="12sp"
                android:textColorHint="@color/username_color"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:paddingRight="40dp"
                />

            <ImageView android:id="@+id/vector_ek1"
                android:src="@drawable/vector_ek1"
                android:contentDescription="vector_ek1"
                android:layout_marginStart="230dp"
                android:layout_marginTop="10dp"
                android:layout_width="18.33dp"
                android:layout_height="15.83dp"
                />
        </RelativeLayout>

        <CheckBox
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:text="@string/i_agree_to_the_terms_of_service_and_privacy_policy_string"
            android:textSize="12sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"
            android:paddingLeft="10dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.72"
            >

            <View   android:id="@+id/rectangle_13"
                android:background="@drawable/rectangle_13_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="260dp"
                android:layout_height="36dp"
                />

            <TextView android:id="@+id/create_account"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/rectangle_14_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_account_string"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.715"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sign_up"
            android:layout_marginTop="452dp"
            />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>